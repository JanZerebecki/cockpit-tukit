Name: cockpit-tukit
Version: __VERSION__
Release: 1%{?dist}
Summary: Cockpit module for Transactional Update
License: LGPLv2+

URL: https://github.com/openSUSE/cockpit-tukit
Source: %{name}-%{version}.tar
BuildArch: noarch
BuildRequires: nodejs-devel
BuildRequires: npm
BuildRequires: make
BuildRequires: appstream-glib

Requires: cockpit-system
Requires: tukitd

%define debug_package %{nil}

%description
Cockpit module for Transactional Update

%prep
%setup -q -n %{name}

%build
# ignore pre-built webpack in release tarball and rebuild it
rm -rf dist
NODE_ENV=production make

%install
%make_install
appstream-util validate-relax --nonet %{buildroot}/%{_datadir}/metainfo/*

# drop source maps, they are large and just for debugging
find %{buildroot}%{_datadir}/cockpit/ -name '*.map' | xargs --no-run-if-empty rm --verbose

%files
%doc README.md
%license LICENSE dist/index.js.LICENSE.txt.gz
%{_datadir}/cockpit/*
%{_datadir}/metainfo/*

%changelog
